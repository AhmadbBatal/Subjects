<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp"
    app:cardElevation="8dp"
    app:cardCornerRadius="@dimen/material_card_round"
    android:foreground="?android:attr/selectableItemBackground"
    android:foregroundTint="#121212"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:id="@+id/main_card_chip_category">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_icon_ship"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_32sdp"
                android:contentDescription="@string/todo"
                android:src="@drawable/sumphor"
                app:layout_constraintBottom_toTopOf="@+id/txt_years"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="5dp"/>

        <TextView
            android:id="@+id/txt_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/first_year"
            android:textColor="@color/dark_blue_text"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:elevation="5dp"
            android:lines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_icon_ship" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/chip_fill_color"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_icon_ship"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>